# Ports
MS_MEMBERSHIP_PORT=8081
MS_PRODUCT_PORT=8082
MS_ORDER_PORT=8083
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Spring profiles (shared)
SPRING_PROFILES_ACTIVE=default

# Frontend (UI)
MS_UI_PORT=5173

# Service-to-service URLs (use Docker DNS by default; override with host/IP if deploying on VMs)
ORDER_SERVICE_URL=http://ms-order:${MS_ORDER_PORT}
PRODUCT_SERVICE_URL=http://ms-product:${MS_PRODUCT_PORT}
MEMBERSHIP_SERVICE_URL=http://ms-membership:${MS_MEMBERSHIP_PORT}

# Frontend (ms-ecommerce-ui) API endpoints
VITE_MEMBERSHIP_API=https://localhost/api/membership
VITE_PRODUCT_API=https://localhost/api/product
VITE_ORDER_API=https://localhost/api/order

# Database (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecommerce
DB_USERNAME=postgres
DB_PASSWORD=postgres

PGADMIN_PORT=5050
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# CORS (comma-separated list of allowed origins)
# Include Traefik-hosted UI (http://localhost) and Vite dev server (http://localhost:5173).
CORS_ALLOWED_ORIGINS=https://localhost,https://localhost:5173,http://localhost,http://localhost:5173
